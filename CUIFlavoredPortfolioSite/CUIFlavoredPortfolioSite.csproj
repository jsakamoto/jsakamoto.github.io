<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Authors>J.Sakamoto</Authors>
    <Product>CUI Flavored Portfolio Site - Powered by Blazor WebAssembly</Product>
    <Copyright>Copyright (C) J.Sakamoto</Copyright>
    <PackageProjectUrl></PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DefineConstants>$(DefineConstants);RELEASE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="compilerconfig.json" />
    <None Include="compilerconfig.json" />
    <_ContentIncludedByDefault Remove="wwwroot\site.css" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.3" />
    <!--<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="5.0.3" PrivateAssets="all" />-->
    <PackageReference Include="Toolbelt.Blazor.DevServer.WithCssLiveReloader" Version="5.0.3" PrivateAssets="all" />
    <PackageReference Include="System.Net.Http.Json" Version="5.0.0" />

    <PackageReference Include="CommandLineSwitchParser" Version="1.0.0" />
    <PackageReference Include="Figgle" Version="0.4.0" />
    <PackageReference Include="PublishSPAforGitHubPages.Build" Version="1.2.0" />
    <PackageReference Include="Toolbelt.AnsiEscCode.Colorize" Version="1.0.0" />
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="4.0.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <PropertyGroup>
    <BeforePublishSPAforGHPages>PreRendering</BeforePublishSPAforGHPages>
  </PropertyGroup>
  <Target Name="PreRendering" AfterTargets="Publish">
    <Exec Command="dotnet run --project ../CUIFlavoredPortfolioSite.PreRenderer/CUIFlavoredPortfolioSite.PreRenderer.csproj -c Release -- $(PublishDir)wwwroot/index.html" />
  </Target>

</Project>
